include ../mixins/_icons

.modal-overlay
  .modal
    .modal__header
      a(class="modal__close modal-action-close" href="#")
        +icon('close')
      .modal__title Редактировать альбом
    .modal__body
      form(action="/ajax/album/update" method="POST")
        .add-album
          input(type='hidden' name='id' value= _id)
          .modal__row
            .modal__label Название
            input.modal__input(class="modal--stretch" type="text" name="title" placeholder="Название" value=`${title}` required=true)

          .modal__row
            .modal__label Описание
            textarea.modal__textarea(class="modal--stretch" type="text" name="description" placeholder="Описание" required=true) #{description}

          .modal-cover
            .modal-cover__thumb.modal-cover__thumb--active
              .modal-cover__thumb-wrapper
                img.modal-cover__thumb-img(src=`${cover.dir}/_thumbs/${cover.src}` width="50" height="50" alt="cover")
            input.modal-cover__file#modal-cover(type="file" name="cover" accept="image/*")
            label(for="modal-cover")
              .modal-cover__btn(class="button button--outline button--pointer") Загрузить обложку
            .modal-cover__file-info (файл должен быть размером не более #[span.modal-cover__file-size 1024 КБ] )

          .modal__errors

        .modal__footer
          button.button(type='submit') Сохранить
          button.button.button--transparent(class='modal-action-close') Отменить


