include ../mixins/_icons

.my-albums__item
  a(href=`/album/${_id}` class="my-albums__item-cover-wrapper")
    .my-albums__item-spinner
      .my-albums__item-hover-text
        .my-albums__item-hover-description #{description}
        .my-albums__item-hover-num-wrapper
          span.my-albums__item-hover-num #{photos_count}
          span.my-albums__item-hover-num-text Фотографий
    img(class="my-albums__item-cover" src=`${dir}/_thumbs/${cover}` alt="Album cover")
  .my-albums__item-footer
    if albumCanEdit
      a(class="my-albums__item-edit-link" href=`#${_id}`)
        +icon('edit', ['my-albums__item-icon', 'my-albums__item-icon_edit'])  
    a(class="my-albums__item-link" href=`/album/${_id}`)
      h3.my-albums__item-title #{title}